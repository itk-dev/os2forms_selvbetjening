{#
  Template file for Maestro notification.

  @var array message
  @var task_url
#}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ message.subject }}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <style>
    @page {
      size: a4 portrait;
      margin: 20mm;
    }

    .task-url {
      display: block;
      background: green;
      color: white;
      padding: 1em;
      text-decoration: none;
      text-align: center;
    }
  </style>
</head>
<body>
<div class="container">
  {# @see https://api.drupal.org/api/drupal/core%21modules%21filter%21filter.module/function/check_markup/9 #}
  <div class="notification-content">{{ {
      '#type':   'processed_text',
      '#text':    message.content.value,
      '#format':  message.content.format,
    } }}</div>

  {% if task_url|default(false) %}
    <a class="task-url" href="{{ task_url }}">{{ action_label|default('Go to your task'|t) }}</a>
  {% endif %}
</div>
</body>
</html>

