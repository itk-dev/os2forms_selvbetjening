{
    "name": "drupal/recommended-project",
    "description": "Project template for Drupal 8 projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "vcs",
            "url": "https://github.com/itk-dev/os2forms_cpr_lookup"
        },
        {
            "type": "vcs",
            "url": "https://github.com/itk-dev/os2forms_cvr_lookup"
        },
        {
            "type": "vcs",
            "url": "https://github.com/itk-dev/os2forms_digital_post"
        },
        {
            "type": "vcs",
            "url": "https://github.com/itk-dev/os2forms_nemlogin_openid_connect"
        }
    ],
    "require": {
        "php": "~7.4.0 || ~8.0.0",
        "composer/installers": "^1.2",
        "drupal/admin_audit_trail": "^1.0@alpha",
        "drupal/bootstrap": "^3.21",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-project-message": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drupal/memcache": "^2.3",
        "drupal/menu_link_attributes": "^1.2",
        "drupal/openid_connect": "2.x-dev@dev",
        "drupal/permissions_by_term": "2.25",
        "drupal/system_status": "^2.9",
        "drush/drush": "^10.6",
        "itk-dev/os2forms-cpr-lookup": "^1.3",
        "itk-dev/os2forms-digital-post": "dev-develop",
        "itk-dev/os2forms_cvr_lookup": "^1.1",
        "itk-dev/os2forms_nemlogin_openid_connect": "dev-develop",
        "itk-dev/web_accessibility_statement": "dev-master",
        "os2forms/os2forms_forloeb_profile": "^1.1"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": true,
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "enable-patching": true,
        "patcher": {
            "force-reset": true
        },
        "patches": {
            "drupal/webform": {
                "Add support for Set to state": "https://raw.githubusercontent.com/OS2Forms/os2forms8/master/patches/add-set-to-state-3159806-2-modified-5.19.patch"
            },
            "drupal/webform_migrate": {
                "Set to support. Checkbox condition fixes": "https://raw.githubusercontent.com/OS2Forms/os2forms8/master/patches/setto-and-checkboxes-condition-fix-onlyD7.patch"
            },
            "drupal/queue_mail": {
                "Admin interface to see queued mail": "https://www.drupal.org/files/issues/2020-06-30/3096917-ui-queue-mail-moderate-5.patch"
            },
            "drupal/smtp": {
                "Duplicated Attachments using webforms": "https://www.drupal.org/files/issues/2020-06-18/smtp-2995290-17.patch"
            },
            "drupal/core": {
                "Allow site install with profile containing hook_install": "https://www.drupal.org/files/issues/2020-11-25/2982052-55.patch"
            },
            "drupal/dynamic_entity_reference": {
                "D8 compatible patch for the current 2.x version (https://www.drupal.org/project/dynamic_entity_reference/issues/3120952#comment-14141038)": "https://www.drupal.org/files/issues/2021-06-22/entityquery-reference-joins-should-specify-target_type-3120952-24.patch"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        }
    },
     "scripts": {
        "post-install-cmd": [
            "# Due to <https://github.com/vaimo/composer-patches/issues/85> we have to apply a patch to the OpenID Connect module ourselves",
            "# Revoking group access does not reflect on applied roles (https://www.drupal.org/project/openid_connect/issues/3224128)",
            "cd web/modules/contrib/openid_connect && git checkout . && curl --silent --location https://git.drupalcode.org/project/openid_connect/-/merge_requests/31.diff | patch --strip=1 --forward || true",

            "vendor/bin/drush webform:libraries:download"
        ]
     }
}
